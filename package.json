{
  "name": "contexto",
  "displayName": "Contexto",
  "description": "智能国际化翻译助手，帮助开发者进行符合业务场景和UI场景的本土化翻译",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "contexto",
          "title": "Contexto",
          "icon": "$(globe)"
        }
      ]
    },
    "views": {
      "contexto": [
        {
          "id": "contexto.welcome",
          "name": "欢迎",
          "type": "webview",
          "when": "contexto.showWelcome",
          "icon": "$(rocket)"
        },
        {
          "id": "contexto.configError",
          "name": "配置异常",
          "type": "webview",
          "when": "contexto.showConfigError",
          "icon": "$(warning)"
        },
        {
          "id": "contexto",
          "name": "翻译管理",
          "when": "contexto.showTranslationManager",
          "icon": "$(list-unordered)"
        },
        {
          "id": "contexto.stats",
          "name": "统计数据",
          "type": "webview",
          "when": "contexto.showTranslationManager",
          "icon": "$(graph)"
        }
      ]
    },
    "commands": [
      {
        "command": "contexto.initProject",
        "title": "初始化项目",
        "icon": "$(add)"
      },
      {
        "command": "contexto.deleteKeys",
        "title": "删除无用Key",
        "icon": "$(trash)"
      },
      {
        "command": "contexto.translateKeys",
        "title": "一键翻译",
        "icon": "$(globe)"
      },
      {
        "command": "contexto.exportTranslations",
        "title": "导出翻译",
        "icon": "$(export)"
      },
      {
        "command": "contexto.showI18nViewer",
        "title": "查看i18n数据",
        "icon": "$(table)"
      },
      {
        "command": "contexto.refresh",
        "title": "刷新",
        "icon": "$(refresh)"
      },
      {
        "command": "contexto.openConfig",
        "title": "打开配置",
        "icon": "$(gear)"
      },
      {
        "command": "contexto.clearLog",
        "title": "清空日志",
        "icon": "$(clear-all)"
      },
      {
        "command": "contexto.toggleDevLog",
        "title": "切换开发日志",
        "icon": "$(debug-console)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "contexto.translateKeys",
          "when": "view == contexto",
          "group": "navigation@1"
        },
        {
          "command": "contexto.exportTranslations",
          "when": "view == contexto",
          "group": "navigation@2"
        },
        {
          "command": "contexto.showI18nViewer",
          "when": "view == contexto",
          "group": "navigation@3"
        },
        {
          "command": "contexto.refresh",
          "when": "view == contexto",
          "group": "navigation@4"
        },
        {
          "command": "contexto.openConfig",
          "when": "view == contexto",
          "group": "navigation@5"
        }
      ],
      "view/item/context": [
        {
          "command": "contexto.translateKeys",
          "when": "view == contexto && viewItem == keyCategory",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "clean": "rm -rf out && rm -f *.vsix"
  },
  "devDependencies": {
    "@types/node": "18.x",
    "@types/vscode": "^1.74.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "fast-glob": "^3.3.2",
    "glob": "^8.1.0",
    "xlsx": "^0.18.5"
  }
}
