{
  "name": "contexto",
  "displayName": "Contexto",
  "description": "智能国际化翻译助手，帮助开发者进行符合业务场景和UI场景的本土化翻译",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "contexto",
          "title": "Contexto",
          "icon": "$(globe)"
        }
      ]
    },
    "views": {
      "contexto": [
        {
          "id": "contexto",
          "name": "翻译管理",
          "when": "true",
          "icon": "$(list-unordered)"
        },
        {
          "id": "contextoWebview",
          "name": "控制面板",
          "type": "webview",
          "when": "true",
          "icon": "$(dashboard)"
        }
      ]
    },
    "commands": [
      {
        "command": "contexto.initProject",
        "title": "初始化项目",
        "icon": "$(add)"
      },
      {
        "command": "contexto.deleteKeys",
        "title": "删除无用Key",
        "icon": "$(trash)"
      },
      {
        "command": "contexto.translateKeys",
        "title": "一键翻译",
        "icon": "$(globe)"
      },
      {
        "command": "contexto.refresh",
        "title": "刷新",
        "icon": "$(refresh)"
      },
      {
        "command": "contexto.openConfig",
        "title": "打开配置",
        "icon": "$(gear)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "contexto.refresh",
          "when": "view == contexto",
          "group": "navigation@1"
        },
        {
          "command": "contexto.openConfig",
          "when": "view == contexto",
          "group": "navigation@2"
        }
      ],
      "view/item/context": [
        {
          "command": "contexto.translateKeys",
          "when": "view == contexto && viewItem == keyCategory",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "18.x",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "glob": "^8.1.0",
    "fast-glob": "^3.3.2"
  }
}
